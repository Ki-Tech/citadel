#!/bin/sh
# prerm script for citadel-server

set -e

case "$1" in
    remove|upgrade|deconfigure)
        if which invoke-rc.d >/dev/null 2>&1; then
          invoke-rc.d citadel stop
        else
          /etc/init.d/citadel stop
        fi
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
