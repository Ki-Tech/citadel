#!/bin/sh
# postinst script for citadel-client

set -e

case "$1" in
    configure)
        chown citadel:citadel /etc/citadel/citadel.rc
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
