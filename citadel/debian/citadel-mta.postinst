#!/bin/sh
# postinst script for citadel-mta

set -e

case "$1" in
    configure)
        chown root:citadel /usr/sbin/sendmail
        chmod 4755 /usr/sbin/sendmail
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
